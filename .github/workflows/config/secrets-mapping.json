{
  "description": "Maps logical secret names to actual GitHub secret names for different environments",
  "mappings": {
    "staging": {
      "gcp_service_account": "GCP_STAGING_SA_KEY",
      "gcp_project": "GCP_PROJECT_ID",
      "terraform_state": "TF_STATE_BUCKET",
      "database_url": "STAGING_DATABASE_URL",
      "api_keys": {
        "openai": "OPENAI_API_KEY",
        "anthropic": "ANTHROPIC_API_KEY"
      },
      "notifications": {
        "slack_webhook": "SLACK_WEBHOOK_URL"
      }
    },
    "production": {
      "gcp_service_account": "GCP_PROD_SA_KEY",
      "gcp_project": "GCP_PROD_PROJECT_ID", 
      "terraform_state": "TF_PROD_STATE_BUCKET",
      "database_url": "PROD_DATABASE_URL",
      "api_keys": {
        "openai": "PROD_OPENAI_API_KEY",
        "anthropic": "PROD_ANTHROPIC_API_KEY"
      },
      "notifications": {
        "slack_webhook": "PROD_SLACK_WEBHOOK_URL",
        "pagerduty": "PAGERDUTY_INTEGRATION_KEY"
      }
    },
    "shared": {
      "github_token": "GITHUB_TOKEN",
      "codecov_token": "CODECOV_TOKEN",
      "sonarcloud_token": "SONAR_TOKEN"
    }
  },
  "validation": {
    "required_for_staging": [
      "GCP_STAGING_SA_KEY",
      "GCP_PROJECT_ID", 
      "TF_STATE_BUCKET"
    ],
    "required_for_production": [
      "GCP_PROD_SA_KEY",
      "GCP_PROD_PROJECT_ID",
      "TF_PROD_STATE_BUCKET",
      "PROD_DATABASE_URL"
    ],
    "optional": [
      "SLACK_WEBHOOK_URL",
      "OPENAI_API_KEY",
      "ANTHROPIC_API_KEY"
    ]
  }
}