# Example Terraform variables file
# Copy to terraform.tfvars and fill in your values

project_id = "your-gcp-project-id"
region     = "us-central1"

github_org   = "your-github-org"
github_repo  = "your-repo"  # Optional, leave empty for org-level runner
# github_token set via environment variable: TF_VAR_github_token

runner_name = "gcp-cloudrun-runner"
runner_labels = [
  "warp-custom-default",
  "linux", 
  "x64",
  "docker",
  "cloud-run"
]

# Cloud Run resources
min_instances = 1
max_instances = 5
cpu           = "2"
memory        = "4Gi"

# Features
enable_docker    = false  # Set to true for Docker-in-Docker
enable_keepalive = true   # Keep instances warm