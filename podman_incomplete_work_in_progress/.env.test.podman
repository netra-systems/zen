# Test Environment Configuration for Podman Services
# This file configures tests to connect to Podman services running in WSL

# Environment
ENVIRONMENT=test
TESTING=true

# PostgreSQL Configuration (Podman service on port 5433)
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=netra_test
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/netra_test

# Redis Configuration (Podman service on port 6379)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# ClickHouse Configuration (Podman services on ports 8123/9000)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_TCP_PORT=9000
CLICKHOUSE_PORT=9000
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DB=netra_analytics

# Auth Service (not running yet, but define for completeness)
AUTH_SERVICE_URL=http://localhost:8081

# Backend Service (not running yet, but define for completeness)
BACKEND_SERVICE_URL=http://localhost:8000

# Security - Dev/Test settings
JWT_SECRET_KEY=dev-jwt-secret-key-must-be-at-least-32-characters
SECRET_KEY=dev-secret-key-for-development
SERVICE_SECRET=test-service-secret-for-podman-testing-only
FERNET_KEY=iZAG-Kz661gRuJXEGzxgghUFnFRamgDrjDXZE6HdJkw=

# LLM Configuration
USE_REAL_LLM=true
GEMINI_API_KEY=${GEMINI_API_KEY}

# Disable services not yet running
DISABLE_AUTH_SERVICE=false
DISABLE_BACKEND_SERVICE=false

# Test-specific settings
USE_REAL_SERVICES=true
SKIP_DOCKER_SETUP=true