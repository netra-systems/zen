# Staging Environment OAuth Configuration
ENVIRONMENT=staging

# OAuth Client for Staging (shared across all PR environments)
GOOGLE_OAUTH_CLIENT_ID_STAGING=${GOOGLE_OAUTH_CLIENT_ID_STAGING}
GOOGLE_OAUTH_CLIENT_SECRET_STAGING=${GOOGLE_OAUTH_CLIENT_SECRET_STAGING}

# OAuth Proxy Configuration
OAUTH_PROXY_URL=https://auth.staging.netrasystems.ai
USE_OAUTH_PROXY=true

# PR Environment Detection (set by CI/CD)
PR_NUMBER=${PR_NUMBER}

# Staging Features
ALLOW_DEV_LOGIN=false
ALLOW_MOCK_AUTH=false

# Dynamic URLs (set by deployment)
FRONTEND_URL=${FRONTEND_URL:-https://app.staging.netrasystems.ai}
API_URL=${API_URL:-https://api.staging.netrasystems.ai}

# Database (staging Cloud SQL)
DATABASE_URL=${DATABASE_URL}
REDIS_URL=${REDIS_URL}
CLICKHOUSE_URL=${CLICKHOUSE_URL}

# Security (from Secret Manager)
SECRET_KEY=${SECRET_KEY}
JWT_SECRET_KEY=${JWT_SECRET_KEY}

# Staging Mode Flags
DEBUG=false
RELOAD=false
LOG_LEVEL=info

# Cloud Run Configuration
PORT=${PORT:-8080}
K_SERVICE=${K_SERVICE}
K_REVISION=${K_REVISION}