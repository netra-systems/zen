# WebSocket Test Environment Configuration
# Minimal configuration for WebSocket service startup testing
# Created for non-Docker local testing

ENVIRONMENT=development

# Critical startup bypass configuration
BYPASS_STARTUP_VALIDATION=true

# Security Keys - Required for auth
SECRET_KEY=test-secret-key-for-websocket-testing-only-32chars-min
JWT_SECRET_KEY=test-jwt-secret-key-for-websocket-testing-only-must-be-32-chars

# Database Configuration - Using SQLite for minimal setup
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=test
POSTGRES_PASSWORD=test
POSTGRES_DB=websocket_test
DATABASE_URL=sqlite:///./websocket_test.db

# Redis Configuration - Optional for basic testing
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Service URLs
AUTH_SERVICE_URL=http://localhost:8081
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# WebSocket Configuration
WEBSOCKET_TIMEOUT=300
WEBSOCKET_PING_INTERVAL=30

# LLM Configuration - Minimal setup
LLM_MODE=shared
ANTHROPIC_API_KEY=test-key-placeholder
OPENAI_API_KEY=test-key-placeholder
GEMINI_API_KEY=test-key-placeholder

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000

# Development Features
ALLOW_DEV_LOGIN=true
ALLOW_MOCK_AUTH=true
DEBUG=true
LOG_LEVEL=INFO

# Disable optional services
CLICKHOUSE_REQUIRED=false
CLICKHOUSE_MODE=disabled
DEV_MODE_CLICKHOUSE_ENABLED=false

# Testing flags
TESTING=true
TEST_MODE=true

# Host and Port
HOST=0.0.0.0
PORT=8000