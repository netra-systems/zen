# Production Environment OAuth Configuration
ENVIRONMENT=production

# OAuth Client for Production
GOOGLE_OAUTH_CLIENT_ID_PROD=${GOOGLE_OAUTH_CLIENT_ID_PROD}
GOOGLE_OAUTH_CLIENT_SECRET_PROD=${GOOGLE_OAUTH_CLIENT_SECRET_PROD}

# Production Features
ALLOW_DEV_LOGIN=false
ALLOW_MOCK_AUTH=false

# Production URLs
FRONTEND_URL=https://netrasystems.ai
API_URL=https://api.netrasystems.ai

# Database (production Cloud SQL)
DATABASE_URL=${DATABASE_URL}
REDIS_URL=${REDIS_URL}
CLICKHOUSE_URL=${CLICKHOUSE_URL}

# Security (from Secret Manager)
SECRET_KEY=${SECRET_KEY}
JWT_SECRET_KEY=${JWT_SECRET_KEY}

# Production Mode Flags
DEBUG=false
RELOAD=false
LOG_LEVEL=warning

# Cloud Run Configuration
PORT=${PORT:-8080}
K_SERVICE=${K_SERVICE}
K_REVISION=${K_REVISION}

# Production Security Headers
SECURE_HEADERS=true
CORS_ORIGINS=https://netrasystems.ai
TRUSTED_HOSTS=netrasystems.ai,api.netrasystems.ai