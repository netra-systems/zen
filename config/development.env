# Development Environment Configuration
# This file defines environment variables for local development

# Environment Setting
ENVIRONMENT=development

# Database Configuration
POSTGRES_USER=netra
POSTGRES_PASSWORD=netra123
POSTGRES_DB=netra_dev
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Configuration  
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# ClickHouse Configuration (optional for development)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=netra
CLICKHOUSE_PASSWORD=netra123
CLICKHOUSE_DB=netra_analytics
CLICKHOUSE_SECURE=false

# Service Configuration
SERVER_PORT=8000
AUTH_PORT=8081
FRONTEND_PORT=3000
LOG_LEVEL=INFO

# Authentication Configuration (development defaults)
SECRET_KEY=dev-secret-key-change-in-production-must-be-at-least-32-chars
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production-must-be-at-least-32-chars
FERNET_KEY=dev-fernet-key-change-in-production-must-be-32-chars
SERVICE_SECRET=dev-service-secret-for-development
SERVICE_ID=netra-dev

# JWT Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Feature Flags for Development
ALLOW_DEV_OAUTH_SIMULATION=true
WEBSOCKET_AUTH_BYPASS=true
SKIP_MIGRATION_ON_STARTUP=false
ENABLE_STARTUP_CHECKS=true

# API Configuration for Development
API_BASE_URL=http://localhost:8000
AUTH_SERVICE_URL=http://localhost:8081
WS_BASE_URL=ws://localhost:8000/ws
FRONTEND_URL=http://localhost:3000

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# OAuth Configuration (development)
GOOGLE_OAUTH_CLIENT_ID_DEVELOPMENT=dev-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET_DEVELOPMENT=dev-oauth-client-secret
OAUTH_REDIRECT_URI=http://localhost:8081/oauth/callback
OAUTH_CALLBACK_URL=http://localhost:8081/oauth/callback

# Health Check Configuration
HEALTH_CHECK_GRACE_PERIOD=30
HEALTH_CHECK_MAX_RETRIES=3

# E2E Test Configuration
# Used for staging E2E tests to bypass OAuth authentication (development placeholder)
E2E_OAUTH_SIMULATION_KEY=dev-e2e-oauth-bypass-key-for-testing-only-change-in-staging