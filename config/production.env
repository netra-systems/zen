# Production Environment Configuration
# This file defines environment variables for production environment
# ALL production secrets MUST be set via environment variables or secret management

# Environment Setting
ENVIRONMENT=production

# Database Configuration (REQUIRED - set via environment/secrets)
# POSTGRES_USER=<set-via-environment>
# POSTGRES_PASSWORD=<set-via-secrets>
# POSTGRES_DB=netra_production
# POSTGRES_HOST=<set-via-environment>
# POSTGRES_PORT=5432

# Redis Configuration (REQUIRED - set via environment/secrets)
# REDIS_HOST=<set-via-environment>
# REDIS_PORT=6379
# REDIS_PASSWORD=<set-via-secrets>

# ClickHouse Configuration (optional)
# CLICKHOUSE_HOST=<set-via-environment>
# CLICKHOUSE_PORT=8123
# CLICKHOUSE_USER=<set-via-environment>
# CLICKHOUSE_PASSWORD=<set-via-secrets>
# CLICKHOUSE_DB=netra_production_analytics
# CLICKHOUSE_SECURE=true

# Service Configuration
SERVER_PORT=8000
AUTH_PORT=8081
FRONTEND_PORT=3000
LOG_LEVEL=INFO

# Authentication Configuration (REQUIRED - set via secrets)
# SECRET_KEY=<set-via-secrets>
# JWT_SECRET_PRODUCTION=<set-via-secrets>
# FERNET_KEY=<set-via-secrets>
# SERVICE_SECRET=<set-via-secrets>
SERVICE_ID=netra-production

# JWT Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Feature Flags for Production
ALLOW_DEV_OAUTH_SIMULATION=false
WEBSOCKET_AUTH_BYPASS=false
SKIP_MIGRATION_ON_STARTUP=false
ENABLE_STARTUP_CHECKS=true
DEBUG=false

# API Configuration for Production
# API_BASE_URL=<set-via-environment>
# AUTH_SERVICE_URL=<set-via-environment>
# WS_BASE_URL=<set-via-environment>
# FRONTEND_URL=<set-via-environment>

# CORS Configuration
# CORS_ALLOWED_ORIGINS=<set-via-environment>

# OAuth Configuration (production - REQUIRED via secrets)
# GOOGLE_OAUTH_CLIENT_ID_PRODUCTION=<set-via-secrets>
# GOOGLE_OAUTH_CLIENT_SECRET_PRODUCTION=<set-via-secrets>
# OAUTH_REDIRECT_URI=<set-via-environment>
# OAUTH_CALLBACK_URL=<set-via-environment>

# Health Check Configuration
HEALTH_CHECK_GRACE_PERIOD=60
HEALTH_CHECK_MAX_RETRIES=5

# LLM API Keys (REQUIRED - set via secrets)
# ANTHROPIC_API_KEY=<set-via-secrets>
# OPENAI_API_KEY=<set-via-secrets>
# GEMINI_API_KEY=<set-via-secrets>

# GCP Configuration (for Secret Manager)
# GCP_PROJECT_ID=<set-via-environment>