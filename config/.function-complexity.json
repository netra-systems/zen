{
  "max_function_lines": 8,
  "enforcement_level": "error",
  "exclude_patterns": [
    "**/test_*.py",
    "**/tests/**",
    "**/examples/**",
    "**/demos/**",
    "**/migrations/**",
    "**/__pycache__/**",
    "**/node_modules/**"
  ],
  "exclude_functions": [
    "__init__",
    "__str__",
    "__repr__", 
    "__eq__",
    "__hash__",
    "setUp",
    "tearDown",
    "test_*"
  ],
  "warning_threshold": 6,
  "error_threshold": 8,
  "auto_fix": {
    "enabled": false,
    "strategies": [
      "extract_helper_functions",
      "early_returns",
      "extract_validation"
    ]
  },
  "reporting": {
    "format": "human",
    "show_suggestions": true,
    "group_by_file": true,
    "sort_by": "complexity_desc"
  },
  "integration": {
    "pre_commit": true,
    "ci_cd": true,
    "ide_warnings": true
  }
}